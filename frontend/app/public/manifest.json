{
  "manifest_version": 3,
  "name": "Easy Wallet",
  "short_name": "EW",
  "version": "0.0.1",
  "description": "Easy Wallet for EIP-6963",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": ["activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["extension.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "extension.html"
  }
}